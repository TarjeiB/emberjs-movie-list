<div class="container">
    <div class="form-top panel-heading">
        <h1>Account</h1>
        <p>Only enter information in the fields you would like to change.</p>
        <p>You'll need to provide your existing password for security reasons.</p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form role="form" {{action 'updateUser' on='submit' }} class="update-form form-bottom panel-body">
                <div class="form-group">
                    <p class="dimgrey text-push"><strong>Current email:</strong> {{session.currentUser.email}}</p>
                    <label class="sr-only" for="update-email">New email:</label>
                    {{input class="form-update-email form-control" id="update-email" placeholder="New email" type="email" value=updateEmail}}
                </div>
                <div class="form-group">
                    <p class="dimgrey text-push"><strong>Current username:</strong> {{session.currentUser.displayName}}</p>
                    <label class="sr-only" for="update-username">New username:</label>
                    {{input class="form-update-username form-control" id="update-username" placeholder="New username" type="username" value=updateUsername}}
                </div>
                <div class="form-group">
                    <label class="sr-only" for="update-password">New password:</label>
                    {{input class="form-update-password form-control" id="update-password" placeholder="New password" type="password" value=updatePassword}}
                </div>
                <div class="form-group">
                    <label class="sr-only" for="current-password">New password:</label>
                    {{input class="form-current-password form-control" id="current-password" placeholder="Current password" type="password" value=currentPassword}}
                </div>
                <button type="submit" class="btn btn-custom">Update Information</button>
            </form>
        </div>
    </div>

    {{#if success}}
        {{#display-alert class-names='col-md-7 alert-success text-push-more' message=success}}{{/display-alert}}
    {{/if}}
    {{#if error}}
        {{#display-alert class-names='col-md-7 alert-danger text-push-more' message=error}}{{/display-alert}}
    {{/if}}
</div>