<div class="container">

  <div class="row">
    <h1>Search for a movie</h1>
    <form role="form" {{action 'search' title year on='submit' }} class="search-form form-inline well col-sm-18">
      <div class="form-group">
        <label class="sr-only" for="search">Search:</label>
        {{input class="form-search form-control" type="text" placeholder="Movie title" enter="search" value=title}}
        {{input class="form-search form-control" type="text" placeholder="Year (optional)" enter="search" value=year}}
        <button type="submit" class="btn btn-custom">Search</button>
      </div>
    </form>
  </div>
  <div class="row">
    {{#each model as |movie|}}
      <h1> {{movie.Title}} </h1>
      <p>Release Date: {{movie.Year}} | IMDB rating: {{movie.imdbRating}}</p>
      <img src="{{movie.Poster}}" />
    {{else}}
      <h1>We couldn't find that movie.</h1>
      <p class="text-push">Please make sure you've spelled the title correctly, or try searching for a different title.</p>
    {{/each}}
  </div>

</div>
